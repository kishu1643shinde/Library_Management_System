<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
  .dashboard-wrapper {
  padding: 40px 0 0 0;
  margin-top: 61px;
  width: 90%;
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
  background: linear-gradient(120deg, #e0ffe7 0%, #b2f0ff 100%);
  border-radius: 25px;
  box-shadow: 0 8px 32px rgba(25, 135, 84, 0.10);
  transition: box-shadow 0.3s, background 0.3s;
  min-height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}


  .welcome-header {
   padding: 20px;
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  margin-bottom: 30px;
}


  .card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 35px;
    justify-content: center;
    margin-left: 20px;
    margin-top: 90px;
  }

  .dashboard-card {
    width: 280px;
    background: linear-gradient(145deg, #f0f0f0, #ffffff);
    border: none;
    border-radius: 15px;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
    margin-left: 0;
  }

  .dashboard-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
  }

  .dashboard-card .card-body {
    text-align: center;
  }

  .dashboard-icon {
    font-size: 40px;
    color: #4a69bd;
    margin-bottom: 15px;
  }

  .dashboard-card h4 {
    font-weight: 600;
    margin-bottom: 10px;
  }

  .dashboard-card p {
    color: #555;
    font-size: 14px;
  }
</style>

<div class="dashboard-wrapper">
  <div class="welcome-header d-flex align-items-center" style="gap: 15px;">
  <div class="icon-circle" style="font-size: 38px; color: #0d6efd;">
    <i class="bi bi-person-circle"></i>
  </div>
  <div>
    <div style="font-size: 24px; font-weight: 600; color: #212529;">
      Welcome, <%= user.name %>!
    </div>
    <div style="font-size: 16px; color: #6c757d;">
       "Let your next favorite book find you!"
    </div>
  </div>
</div>

  <div class="card-container">

    <div class="card dashboard-card">
      <div class="card-body">
        <div class="dashboard-icon">
          <i class="bi bi-people-fill"></i>
        </div>
        <h4>Total Books</h4>
        <p>View and manage book records.</p>
      </div>
    </div>

    <div class="card dashboard-card">
      <div class="card-body">
        <div class="dashboard-icon">
          <i class="bi bi-book-half"></i>
        </div>
        <h4>Issued Books</h4>
        <p>Check inventory of all books.</p>
      </div>
    </div>

    <div class="card dashboard-card">
      <div class="card-body">
        <div class="dashboard-icon">
          <i class="bi bi-journal-check"></i>
        </div>
        <h4>Returned Books</h4>
        <p>Monitor all issued and returned books.</p>
      </div>
    </div>

  </div>
</div>