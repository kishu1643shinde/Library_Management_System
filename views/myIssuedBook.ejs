<style>
  .wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40vh; /* adjust based on your layout */
    flex-direction: column;
    margin-left: 260px;
    margin-top: 10%;
    background: linear-gradient(120deg, #e0ffe7 0%, #b2f0ff 100%);
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #2c3e50;
  }

  .table-container {
    width: 100%;
    max-width: 1700px;
  }

  table {
    border-collapse: collapse;
    width: 100%;
    background-color: #fefefe;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
  }

  th, td {
    padding: 12px 16px;
    text-align: center;
    border: 1px solid #dee2e6;
  }

  thead {
    background-color: #343a40;
    color: white;
  }

  tbody tr:nth-child(odd) {
    background-color: #f8f9fa;
  }

  tbody tr:hover {
    background-color: #f1f1f1;
  }

  .badge {
    padding: 5px 10px;
    border-radius: 10px;
    font-weight: 500;
    font-size: 0.9em;
    display: inline-block;
  }

  .bg-success {
    background-color: #28a745;
    color: #fff;
  }

  .bg-warning {
    background-color: #ffc107;
    color: #000;
  }
</style>

<div class="wrapper">
  <h2 class="mb-4 fw-bold text-gradient">My Issued Book Details</h2>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Issue ID</th>
          <th>Book ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Issue Date</th>
          <th>Return Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% books_issued.forEach(function(book) { %>
          <tr>
            <td><%= book.issue_id %></td>
            <td><%= book.book_id %></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= new Date(book.issue_date).toISOString().slice(0,10) %></td>
            <td><%= new Date(book.return_date).toISOString().slice(0,10) %></td>
            <td>
              <span class="badge <%= book.status === 'returned' ? 'bg-success' : 'bg-warning' %>">
                <%= book.status %>
              </span>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
