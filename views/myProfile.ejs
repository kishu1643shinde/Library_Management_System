<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
  .dashboard-content {
  width: 100vw;               /* Full viewport width */
  max-width: none;            /* Disable max-width limit */
  margin-left: 0;             /* Prevent centering offset */
  margin-right: 0;
  padding: 40px 20px;
  min-height: 80vh;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: linear-gradient(to bottom right, #e3efff, #f8fbff); */
}


  .profile-card {
    background: linear-gradient(145deg, #f0f0f0, #ffffff);
    border-radius: 20px;
    padding: 40px 30px;
    margin-right: 18%;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
    text-align: center;
    width: 70%;
    max-width: 350px;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .profile-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
  }

  .profile-avatar-icon {
    font-size: 90px;
    color: #0d6efd;
    margin-bottom: 20px;
  }

  .profile-name {
    font-size: 26px;
    font-weight: 700;
    color: #212529;
    margin-bottom: 8px;
  }

  .profile-email {
    font-size: 16px;
    color: #555;
    margin-bottom: 15px;
  }

  .role-badge {
    display: inline-block;
    background: #007bff;
    color: #fff;
    font-size: 14px;
    padding: 8px 16px;
    border-radius: 25px;
    font-weight: 500;
    text-transform: capitalize;
    letter-spacing: 0.5px;
  }
</style>

<!-- âœ… Profile Card in Center -->
<div class="dashboard-content">
  <div class="profile-card">
    <div class="profile-avatar-icon">
      <i class="bi bi-person-circle"></i>
    </div>
    <div class="profile-name">Name: <%= user.name %></div>
    <div class="profile-email">Email: <%= user.email %></div>
    <div class="role-badge">Role: <%= user.role %></div>
  </div>
</div>
