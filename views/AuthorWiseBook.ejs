<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Books by Author</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h2>Select Author</h2>
  <form action="/AuthorWiseBookData" method="POST" class="mb-4">
    <div class="mb-3">
     <select name="author" class="form-select" required>
  <option value="">-- Select Author --</option>
  <% authors.forEach(author => { %>
    <option value="<%= author.name %>" <%= selectedAuthor === author.name ? 'selected' : '' %> >
      <%= author.name %>
    </option>
  <% }) %>
</select>

    </div>
    <button type="submit" class="btn btn-primary">Show Books</button>
  </form>

  <% if (books && books.length > 0) { %>
    <h4>Books by <%= selectedAuthor %></h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Book ID</th>
          <th>Title</th>
          <th>Category</th>
          <th>Status</th>
          <th>TotalCopies</th>
          <th>Available Copies</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.id %></td>
            <td><%= book.title %></td>
            <td><%= book.category %></td>
            <td><%= book.status %></td>
            <td><%= book.total_copies %></td>
            <td><%= book.available_copies %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else if (selectedAuthor) { %>
    <p>No books found for <strong><%= selectedAuthor %></strong>.</p>
  <% } %>
</body>
</html>
